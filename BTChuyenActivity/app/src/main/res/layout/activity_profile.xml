<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background"
    tools:context=".ProfileActivity">

    <!-- Nút bánh răng -->

    <!-- Logo app -->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@+id/layoutInfo"
        app:layout_constraintEnd_toStartOf="@+id/imageViewApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />

    <ImageView
        android:id="@+id/btnSetting"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:padding="5dp"
        android:src="@drawable/setting"
        app:layout_constraintBottom_toTopOf="@+id/layoutInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toEndOf="@+id/tvAppName"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/viewLogo"
        app:layout_constraintEnd_toEndOf="@+id/viewLogo"
        app:layout_constraintStart_toStartOf="@+id/viewLogo"
        app:layout_constraintTop_toTopOf="@+id/viewLogo"
        app:srcCompat="@drawable/ic_launcher_foreground"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Profile"
        android:textColor="#2563EB"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/viewLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/viewLogo"
        app:layout_constraintTop_toTopOf="@id/viewLogo" />

    <!-- Khung trắng hiển thị thông tin -->
    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="300dp"
        android:layout_height="480dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_button_white"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLogo">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="259dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/user" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="Thông tin cá nhân"
            android:textColor="#111827"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Họ và tên:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edtTen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Huỳnh Lê Tiến Hiển" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Email:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="huynhletienhien@gmail.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Số điện thoại:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edtSoDienThoai"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="0901234567" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Tài khoản:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edtTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Mật khẩu:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edtMatKhau"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_edittext"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
